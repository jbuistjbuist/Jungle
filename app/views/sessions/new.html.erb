<h1>Login</h1>

<%= form_tag '/login' do %>

   <% if @user && @user.errors.any? || @noemail %>
      <div class="alert alert-danger">
        <strong>The following errors prevented saving:</strong>
        <ul>
          <% @user && @user.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
          <% if @noemail %>
            <li><%= @noemail %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  Email: <%= email_field_tag :email %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>

<% end %>