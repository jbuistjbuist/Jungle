<h1 class="auth_header">Login</h1>

<%= form_tag '/login', class: "auth_form" do %>

   <% if @unable_login %>
      <div class="alert alert-danger">
        <strong>Could not login:</strong>
        <ul>
          <li><%= @noemail %></li>
        </ul>
      </div>
    <% end %>

  Email: <%= email_field_tag :email %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>

<% end %>