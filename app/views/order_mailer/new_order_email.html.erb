<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h1>Your new order #<%= @order.id %></h1>
    <p>Thank you for shopping with us</p>
    <h2> Your Order Details: </h2>

    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
          <% @order.line_items.each do |item| %>
          <%= render 'item', product: item.product, line_item: item %>
          <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents/ 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <p>Please contact support for any questions or concerns regarding your order</p>

  </body>
</html>